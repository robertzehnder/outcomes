<div class="profile">
  <div class="profLeft">
    <p><img src="<%= @user.image_url %>" alt="" /></p>
    <h2><%= @user.email %></h2>
    <div class="buttonFlex">
      <%= button_to "See Your Cohorts", user_memberships_path(@user.id) , :class => "buttonsProfile", :method => :get %>
      <%= button_to "See All Cohorts", user_cohorts_path(@user) , :class => "buttonsProfile", :method => :get %>
      <%= button_to "Edit Your Profile", edit_user_path(@user) , :class => "buttonsProfile", :method => :get %>
      <%= button_to 'Delete Profile', user_path(@user), method: :delete, data: { confirm: 'Are you sure?' } , :class => "buttonsProfile" %>
      <%= button_to "Homework", "/homework/#{@user.id}", :class => "buttonsProfile", :method => :get %>
      <%= button_to "Meetups", "/meetup", :class => "buttonsProfile", :method => :get %>
    </div>
  </div>
  <div class="profRight">
<select id="weekDD" name="">
  <%= options_for_select(
    [
      ['Week 1', 1],
      ['Week 2', 2],
      ["Week 3", 3],
      ["Week 4", 4]
    ], 1
  ) %>
</select>

    <% @roadmaps.each do |roadmap| %>
    <div class="week<%= roadmap.week %> week">
      <h2>Week: <%= roadmap.week %></h2>
      <p><b>Title:</b> <%= roadmap.title %></p>
      <p><b>Content:</b> <%= roadmap.content %></p>
      <p><b>Goal:</b> <%= roadmap.goal %></p>
      <p><b>Theme:</b> <%= roadmap.theme %></p>
      <p><b>Materials:</b> <%= roadmap.materials %></p>
      <p><b>Work Due:</b> <%= roadmap.workDue %></p>
      <p><b>Homework:</b> <%= roadmap.homework %></p>
      <p><b>Small Group:</b> <%= roadmap.smallGroup %></p>
      <p><b>Resources:</b> <%= roadmap.resources %></p>
      <p><b>Links:</b> <%= link_to @link.title, @link.address, :target => "_blank" %></p>
    </div>
    <% end %>
  </div>
  <div class="clear">

  </div>
</div>
